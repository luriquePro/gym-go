generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

model User {
  @@map("users")

  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  updateCount Int      @default(0)

  checkIns CheckIn[]
}


model Gym {
  @@map("gyms")

  id        String   @id @default(uuid())
  name      String
  description String?
  phone     String?
  latitude  Decimal
  longitude Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  updateCount Int      @default(0)

  checkIns CheckIn[]
}

model CheckIn {
  @@map("check_ins")

  id        String   @id @default(uuid())
  validatedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  updateCount Int      @default(0)

  user User @relation(fields: [userId], references: [id])
  userId String
  gym Gym @relation(fields: [gymId], references: [id])
  gymId String
}
