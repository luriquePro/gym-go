{
  "extends": "./tsconfig.json",
  "allowDefaultProjects": true,
  "compilerOptions": {
    "rootDir": ".",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/application/*": ["./src/application/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "jest.config.ts"]
}
